<Window x:Class="cBridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="cBridge" Height="350" Width="525" WindowStartupLocation="CenterScreen" Icon="images/favicon.ico" Background="#272727">
    <StackPanel>
        <Image Source="images/cBridgeDesktop.PNG" Height="207" Margin="31,0,31,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="22" Foreground="#FFA8A8A8" FontWeight="Bold" FontFamily="Segoe UI Light">
            <Run Text="Device ID: "/> <Run Text="{Binding DeviceID}" />
        </TextBlock>
    </StackPanel>
</Window>
